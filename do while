#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include <stdio.h>
using namespace std;
void main()
{int n;
double precio,cantidad , total;
do{
	cout<< "ingrese cantidad de producto: ";
	cin>>cantidad;
	if (cantidad<0)
		cout<< "cantidad no valida.";
}while(cantidad<0);
if (cantidad>0);
cout<< "introduzca el precio: ";
do {
	cin>>precio;
	if(precio<0)
		cout<<"precio no valido.";
	else total=cantidad * precio;
}while (precio<0);
cout<<"total vendido: "<<total;
getch();
}




