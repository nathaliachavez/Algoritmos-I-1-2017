#include "conio.h"

using namespace std;

void main()
{
	int genero,edad,n;
	cout<<"ingrese su genero (1 para masculino, 2 para femenino):";
	cin>>genero;
	if (genero==1)
	{
		cout<<"ingrese su edad:";
		cin>>edad;
